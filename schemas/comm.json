{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "caster" : {
      "type" : "array",
      "items": {
          "type" : "object",
          "name": { "type" : "string", "default" : "Chase" },
          "team": { "type" : "string", "default" : "" },
          "twitter" : { "type" : "string", "default" : "" }
      }
    },
    "isVisible": {
      "type": "boolean",
      "default": false
    }
  },

  "required": ["caster", "isVisible"]
}